@*@model IEnumerable<Labic.Ar.Models.MetricasView>*@
@model Paginacion<Labic.Ar.Models.MetricasView>
@{
    ViewData["Title"] = "Index";
}

<h2>Tiempo de Desarrollo de cada partida</h2>

<form asp-action="Index" method="get">
    <div class="form-action no-Color">
        <p>
            Filtro de busqueda: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Buscar" class="btn btn-default" />
            <a asp-action="Index">Reiniciar Filtro de Busqueda</a>| Registros Mostrados @Model.TotalR
        </p>
    </div>

</form>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.JugadoresId)
                    </th>*@
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NombreSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">UserName</a>
                    @*//  @Html.DisplayNameFor(model => model.UserName)*@
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CategoriaSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Documento</a>
                    @*@Html.DisplayNameFor(model => model.Documento)*@
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CategoriaSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nombre</a>
                    @*@Html.DisplayNameFor(model => model.Nombre)*@
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["CategoriaSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Apellido</a>
                    @*@Html.DisplayNameFor(model => model.Apellido)*@
                </th>
                <th>
                    Hora de la App
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.ObservacionProfesor)*@
                    Observacion del Profesor
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.ObservacionProfesor)*@
                    Tiempo (Sg.)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.JugadoresId)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Documento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ObservacionProfesor)
                    </td> 
                    <td>
                        @Html.DisplayFor(modelItem => item.tiempo)
                    </td>
                    @*<td>
                            <a asp-action="Edit" asp-route-id="@item.MetricsId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.MetricsId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.MetricsId">Delete</a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-page="@(Model.PageIndex - 1)"
       asp-route-currenFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @prevDisabled">
        Anterior
    </a>


    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-action="Index"
           asp-route-sortOrder="@ViewData["CurrentSort"]"
           asp-route-page="@i"
           asp-route-currenFilter="@ViewData["CurrentFilter"]"
           class="btn btn-default">
            @i
        </a>
    }

    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-page="@(Model.PageIndex + 1)"
       asp-route-currenFilter="@ViewData["CurrentFilter"]"
       class="btn btn-default @nextDisabled">
        Siguiente
    </a>

</div>
